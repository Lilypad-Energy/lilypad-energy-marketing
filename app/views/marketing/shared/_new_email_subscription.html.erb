<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
        Leave your info for News and Updates!
      </div>
      <div class="card-body">
        <%= form_for @email_subscription, remote: true do |f| %>
          <div class="form-group">
            <%= label_tag(:email, "Email") %>
            <%= f.email_field :email, required: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= recaptcha_tags %>
            <%= f.submit %>
          </div>
        <% end %>
       </div>
    </div>
  </div>
  <div class="col-sm-4"/></div>
  <hr/>
</div>

<script>
  $('#new_email_subscription').on('ajax:success', function(e, data, status, xhr){
    alert("Thanks!");
    // figure out how to limit this form.
    $('#email_subscription_email').val('');
    grecaptcha.reset();
  }).on('ajax:error',function(e, xhr, status, error){
    alert("Sorry, there was an error!");
    grecaptcha.reset();

  });
</script>
